/** HUGnet code */
//require_once dirname(__FILE__).'/../head.inc.php';
/** Packet log include stuff */
require_once 'HUGnetLib/processes/Devices.php';
require_once 'HUGnetLib/ui/Args.php';

print $argv[0]."\n";
print "Starting...\n";



$config = &\HUGnet\ui\Args::factory(
    $argv,
    $argc,
    array(
        "i" => array("name" => "DeviceID", "type" => "string", "args" => true),
    )
);
if (!is_null($config->i)) {
    $id = hexdec($config->i);
} else {
    $id = null;
}
$daemon = &\HUGnet\processes\Devices::factory($config);
$daemon->system()->network()->device(
    array(
        "id" => $id,
        "HWPartNum" => "0039-26-06-P",
    )
);


while ($daemon->loop()) {
    $daemon->main();
}
print "Finished\n";


?>
